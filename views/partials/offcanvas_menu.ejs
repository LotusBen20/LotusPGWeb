        transform: translateX(-50%);
        width: calc(100% - 40px);
        max-width: 400px;
        border: 1px solid #181818; /* Черная тонкая обводка */
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 1rem;
        z-index: 1000;
        margin-bottom: 20px;
    }

    .user-card-info .card-body {
        display: flex;
